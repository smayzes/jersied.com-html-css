---
interface Props {
	placeholder: string;
	name: string;
}

const { placeholder, name } = Astro.props;
---

<input
    class="bg-white border-b-[2px] border-solid border-[#9AA8BC] focus:border-orange-500 focus:border-b-[2px] text-[#1A212B] text-sm sm:text-base font-normal px-2 sm:px-4 py-2 sm:py-3 rounded-[8px] w-full !outline-0 duration-150"
    type="text"
    placeholder={placeholder}
    name={name}
/>
